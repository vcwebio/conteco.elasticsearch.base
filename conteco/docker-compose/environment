#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="elasticsearch.base"
export CONTECO_DC_GLOBAL_STACKNAMES="elasticsearch"
export CONTECO_DC_GLOBAL_BOOTSTACKS="elasticsearch"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST="conteco_dc_elasticsearch_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_ELASTICSEARCH_ENVIRONMENT,$CONTECO_DC_ELASTICSEARCH_COMMAND,$CONTECO_DC_ELASTICSEARCH_PORTS,$CONTECO_DC_ELASTICSEARCH_VOLUMES,$CONTECO_DC_ELASTICSEARCH_NETWORKS,$CONTECO_DC_ELASTICSEARCH_DEPLOY_MODE,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_ELASTICSEARCH_ENVIRONMENT="\
'cluster.name=elasticsearch', \
'bootstrap.memory_lock=true', \
ES_JAVA_OPTS=-Xms${DOLLAR}{CONTECO_DC_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY} -Xmx${DOLLAR}{CONTECO_DC_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY}, \
'discovery.type=single-node'"
export CONTECO_DC_ELASTICSEARCH_COMMAND=
export CONTECO_DC_ELASTICSEARCH_PORTS=
export CONTECO_DC_ELASTICSEARCH_VOLUMES="'${DOLLAR}{CONTECO_TYPE}_conteco_dc_elasticsearch_volume:/usr/share/elasticsearch/data'"
export CONTECO_DC_ELASTICSEARCH_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay"
export CONTECO_DC_ELASTICSEARCH_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_TYPE}_conteco_dc_elasticsearch_volume: { external: true }"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS elasticsearch.base
export CONTECO_DC_ELASTICSEARCH_DEPLOY_LABELS=
export CONTECO_DC_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_MEMORY="384m"
export CONTECO_DC_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS elasticsearch.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
